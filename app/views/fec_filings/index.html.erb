<h1>Today's Amended Filings</h1>

<table>
  <tr>
    <th>ID</th>
    <th>Committee</th>
    <th>Date coverage from</th>
    <th>Date coverage to</th>
    <th>Report title</th>
    <th>Form type</th>
    <th>Amended</th>
    <th>Amended uri</th>
    <th>Original filing</th>
    <th></th>
  </tr>

<% @fec_filings.each do |fec_filing| %>
  <tr>
    <td><%= fec_filing.committee %></td>
    <td><%= fec_filing.committee_name %></td>
    <td><%= fec_filing.date_coverage_from %></td>
    <td><%= fec_filing.date_coverage_to %></td>
    <td><%= link_to fec_filing.report_title, fec_filing.fec_uri %></td>
    <td><%= fec_filing.form_type %></td>
    <td><%= fec_filing.amended %></td>
    <td><%= fec_filing.amended_uri %></td>
    <td><%= link_to fec_filing.original_filing, fec_filing.original_uri if fec_filing.original_uri %></td>
    <td><%= button_to "Compare", filing_compare_path(fec_filing.original_filing, fec_filing.fec_uri.split('/').last.to_i), :class => "btn btn-inverse" %></td>
  </tr>
<% end %>
</table>